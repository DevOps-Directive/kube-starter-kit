{
  "permissions": {
    "allow": [
      "Bash(mise install*)",
      "Bash(mise run*)",
      "Bash(mise task*)",
      "Read(mise.toml)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.secrets/**)",
      "Read(.aws/**)",
      "Read(**/credentials*)"
    ]
  },
  "env": {
    "MISE_EXPERIMENTAL": "1",
    "BASH_DEFAULT_TIMEOUT_MS": "180000"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/setup-dependencies.sh"
          }
        ]
      }
    ],
    "PostToolUse": []
  }
}