{
  "permissions": {
    "allow": [
      "Bash(mise install*)",
      "Bash(mise run*)",
      "Bash(mise task*)",
      "Bash(go mod*)",
      "Bash(go build*)",
      "Bash(go test*)",
      "Bash(helm*)",
      "Bash(kubectl*)",
      "Bash(terraform init*)",
      "Bash(terraform plan*)",
      "Bash(terraform validate*)",
      "Bash(terraform fmt*)",
      "Bash(kind*)",
      "Bash(tilt*)",
      "Bash(yq*)",
      "Bash(jq*)",
      "Read(go.mod)",
      "Read(go.sum)",
      "Read(Chart.yaml)",
      "Read(values.yaml)",
      "Read(mise.toml)",
      "Read(*.tf)",
      "Read(Dockerfile)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.secrets/**)",
      "Read(.aws/**)",
      "Read(**/credentials*)"
    ]
  },
  "env": {
    "MISE_EXPERIMENTAL": "1",
    "BASH_DEFAULT_TIMEOUT_MS": "180000"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/setup-dependencies.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-edit-check.sh"
          }
        ]
      }
    ]
  }
}
